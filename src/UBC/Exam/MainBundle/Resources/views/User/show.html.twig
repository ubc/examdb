{% extends 'UBCExamMainBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - Show User
{% endblock %}

{% block body %}

<h1>User</h1>

<form class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label">Username</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.username}}</span>            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Firstname</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.firstname }}</span>            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Lastname</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.lastname }}</span>            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Role</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.roleString }}</span>            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Last Login</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{% if entity.lastLogin %}{{ entity.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</span>            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Created</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</span>            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Modified</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{% if entity.modified %}{{ entity.modified|date('Y-m-d H:i:s') }}{% endif %}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('user') }}">
            Back to the List
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Delete?');">Delete</button>
        </form>
    </div>
</div>
{% endblock %}